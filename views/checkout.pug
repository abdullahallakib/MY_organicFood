extends base
block content 
    section#order.order
        .heading
          span order now
          h3 fastest home delivery
        .icons-container
          .icons
            img(src="image/icon-1.png", alt="")
            h3 7:00am to 10:30pm
          .icons
            img(src="image/icon-2.png", alt="")
            h3 +123-456-7890
          .icons
            img(src="image/icon-3.png", alt="")
            h3 chittagong, Bangladesh 
        form(action="")
            .flex
                .inputBox
                    span your name
                    input(type="text", placeholder="customer's name", name="", id="")
                .inputBox
                    span your number
                    input(type="number", placeholder="customer's number", name="", id="")
            .flex
                .inputBox
                    span your order
                    input(type="text", placeholder="food you want", name="", id="")
                .inputBox
                    span how much
                    input(type="number", placeholder="number or orders", name="", id="")
            .flex
                .inputBox
                    span your details
                    input(type="text", placeholder="your message", name="", id="")
                .inputBox
                    span pick up time
                    input(type="datetime-local")
            .flex
                .inputBox
                    textarea(placeholder="your address", id="", cols="30", rows="10")
                .inputBox
                    iframe.map(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d30153.788252261566!2d72.82321484621745!3d19.141690214227783!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7b63aceef0c69%3A0x2aa80cf2287dfa3b!2sJogeshwari%20West%2C%20Mumbai%2C%20Maharashtra%20400047!5e0!3m2!1sen!2sin!4v1634657187694!5m2!1sen!2sin", allowfullscreen="", loading="lazy")
            input.btn(type="submit", value="proceed to order")